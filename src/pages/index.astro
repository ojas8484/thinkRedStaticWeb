<Layout title="Home">
  <div class="row header" id="home">
    <div
      class="col-md-6 d-flex align-items-center justify-content-between hide-social"
    >
      <Image class="header-img img-fluid" src={logo} alt="logo" />
    </div>
    <div
      class="col-md-12 d-flex align-items-center justify-content-between display-ham"
    >
      <Image class="header-img img-fluid" src={logo} alt="logo" />
      <span class="me-2 text-danger display-ham"
        ><i
          class="fa-solid fa-bars"
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasRight"
          aria-controls="offcanvasRight"></i></span
      >
    </div>
    <div
      class="offcanvas offcanvas-end"
      tabindex="-1"
      id="offcanvasRight"
      aria-labelledby="offcanvasRightLabel"
    >
      <div class="offcanvas-header">
        <h5 class="text-color-primary display-1" id="offcanvasRightLabel">
          Menu
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="offcanvas"
          aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <div class="row mt-2">
          <div class="col-md-12 d-flex align-item-center">
            <a
              class="body-1-regular social-icons text-danger"
              href="https://github.com/thinkredtech"
              ><i class="fa-brands fa-square-github"></i></a
            >
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-md-12 d-flex align-item-center">
            <a
              class="body-1-regular social-icons text-danger"
              href="https://www.instagram.com"
              ><i class="fa-brands fa-instagram"></i></a
            >
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-md-12 d-flex align-item-center">
            <a
              class="body-1-regular social-icons text-danger"
              href="https://www.facebook.com"
              ><i class="fa-brands fa-square-facebook"></i></a
            >
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-md-12 d-flex align-item-center">
            <a
              class="body-1-regular social-icons text-danger"
              href="https://www.twitter.com"
              ><i class="fa-brands fa-square-twitter"></i></a
            >
          </div>
        </div>
      </div>
      <hr class="mt-4 mb-4" />
      <div class="row mt-2">
        <div class="col-md-12">
          <span class="body-1-regular text-color-secondary">FAQs</span>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <span class="body-1-regular text-color-secondary">Terms</span>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <span class="body-1-regular text-color-secondary">Privacy</span>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
