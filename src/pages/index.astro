---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import logo from "../assets/thinkRedLogo.png";
import stackPaper from "../assets/stackedCards.png";
import pdev from "../assets/product.jpeg";
import profilePic from "../assets/avatar.webp";
import riginProfile from "../assets/riginProfile.jpeg";
import nileshProfile from "../assets/nileshProfile.jpeg";
import sayakProfile from "../assets/sayakProfile.jpeg";
import mayurProfile from "../assets/mayurProfile.jpeg";
import apaas from "../assets/apaas.webp";
import gdb from "../assets/graphicDesign.avif";
